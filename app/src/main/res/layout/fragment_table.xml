<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ცხრილი"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:paddingVertical="10dp"/>

        <LinearLayout
            android:id="@+id/tableItem"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="სამშაბათი"
                android:textColor="#3F3B3B"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:textSize="18sp"
                android:background="@drawable/table_day_background"/>

            <LinearLayout
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25dp"
                android:background="@drawable/table_subject_background"
                android:paddingVertical="10dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="#696666"
                    android:text="BIT-03 - კომპიუტერული ქსელების საწყისები" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#696666"
                    android:text="09:00 - 09:50" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>